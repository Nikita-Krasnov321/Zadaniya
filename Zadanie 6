        //Задание 3

        static int Factorial(int a)
        {
            int fact = 1;
            for (int i = 2; i <= a; i++)
            {
                fact *= i;
            }
            Console.WriteLine($"Факториал : {fact}");
            return fact;

        }
         private static void Main(string[] args)
        {
        Console.WriteLine("Введите число");
        int num = int.Parse(Console.ReadLine());
        Factorial(num);
      }

        //Задание 4
        static string Reverse(string a)
        {
            char[] charArray = a.ToCharArray();
            Array.Reverse(charArray);
            return new string(charArray);
        }
          private static void Main(string[] args)
        {
        Console.WriteLine("Введите слово");
        string simvol = Console.ReadLine();
        Console.WriteLine(Reverse(simvol));
        }

        //Задание 5
        static bool Polindrom(string a)
        {
            string reverseStr = "";
            a = a.Replace(" ", "").ToLower();

            for (int i = a.Length - 1; i >= 0; i--)
            {
                reverseStr += a[i];
            }

            return a == reverseStr;
        }
        private static void Main(string[] args)
        {
        Console.WriteLine("Введите слово");
        string simvol = Console.ReadLine();
        if (Polindrom(simvol))
        {
            Console.WriteLine("палиндромом");
        }
        else
        {
            Console.WriteLine("не палиндромом");
        }
        }

        //Задание 6
        static double Sred(int[] num)
        {
            int sum = 0;

            foreach (int number in num)
            {
                sum += number;
            }

            return (double)sum / num.Length;
        }
          private static void Main(string[] args)
        {
        int[] numbers = { 1, 2, 3, 5, 7 };
        double srednee = Sred(numbers);

        Console.WriteLine($"Среднее: {srednee}" );
        }
    }
}
